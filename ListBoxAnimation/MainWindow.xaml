<Window 
    x:Class="ListBoxAnimation.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="MainWindow" 
    Height="350" 
    Width="525"
    Name="MainWind"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    >
    <Grid Background="Beige">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"></ColumnDefinition>
            <ColumnDefinition Width="0.5*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical" Grid.Column="0" Background="Green" Name="ButtonsStackPanel">
            <Button Name="Add1" Content="Add1" Click="Add1_Click"></Button>
            <Button Name="Add2" Content="Add2" Click="Add2_Click"></Button>
            <Button Name="Add3" Content="Add3" Click="Add3_Click"></Button>
            <Button Name="Add4" Content="Add4" Click="Add4_Click"></Button>
        </StackPanel>

        <ListBox Name="XListBox" Grid.Column="1" Background="AliceBlue">

        </ListBox>


    </Grid>
</Window>

    
